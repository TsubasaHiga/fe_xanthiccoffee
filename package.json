{
	"name": "markdays",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "pnpm build && vite preview",
		"lint": "biome check --write --unsafe .",
		"analyze": "pnpm build --mode analyze",
		"postinstall": "lefthook install && pnpm exec playwright install",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:report": "playwright show-report",
		"test:e2e:chromium": "playwright test --project=chromium",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:dev": "PLAYWRIGHT_DEV_SERVER=1 playwright test",
		"test:e2e:dev:ui": "PLAYWRIGHT_DEV_SERVER=1 playwright test --ui"
	},
	"dependencies": {
		"@codemirror/view": "^6.37.1",
		"@radix-ui/react-collapsible": "^1.1.11",
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-switch": "^1.2.5",
		"@tailwindcss/vite": "^4.1.8",
		"@vavt/cm-extension": "^1.9.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"date-holidays": "^3.24.3",
		"dayjs": "^1.11.13",
		"github-markdown-css": "^5.8.1",
		"html2canvas-pro": "^1.5.11",
		"jspdf": "^3.0.1",
		"lucide-react": "^0.513.0",
		"marked": "^15.0.12",
		"md-editor-rt": "^5.6.1",
		"next-themes": "^0.4.6",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"sonner": "^2.0.5",
		"tailwind-merge": "^3.3.0",
		"tailwindcss": "^4.1.8",
		"umaki": "^0.6.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@evilmartians/lefthook": "^1.11.13",
		"@playwright/test": "^1.52.0",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22.15.29",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react-swc": "^3.10.1",
		"@vitest/coverage-v8": "^3.2.1",
		"@vitest/ui": "3.2.1",
		"globals": "^16.2.0",
		"jsdom": "^26.1.0",
		"rollup-plugin-visualizer": "^6.0.1",
		"tw-animate-css": "^1.3.4",
		"typescript": "~5.8.3",
		"vite": "^6.3.5",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.1"
	},
	"packageManager": "pnpm@10.11.0"
}
